<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cz.vse.si.predikceobleceni.model.gui.UpravitObleceniController">
    <children>
        <GridPane prefHeight="400.0" prefWidth="601.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <GridPane GridPane.columnIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="361.0" minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="361.0" minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="361.0" minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="361.0" minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="361.0" minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="361.0" minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="361.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="195.0" minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="ulozitButton" alignment="CENTER" disable="true" mnemonicParsing="false"
                                onAction="#upravObleceni" text="Uložit" GridPane.halignment="CENTER"
                                GridPane.rowIndex="7" GridPane.valignment="CENTER"/>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="0">
                            <children>
                                <Label text="Název "/>
                                <TextField fx:id="nazev"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                            <Label text="Vrstva "/>
                            <ComboBox fx:id="vrstva" prefWidth="150.0">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="první"/>
                                        <String fx:value="druhá"/>
                                        <String fx:value="třetí"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
                            <Label text="Část těla "/>
                            <ComboBox fx:id="castTela" prefWidth="150.0">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="čepice"/>
                                        <String fx:value="tělo"/>
                                        <String fx:value="nohy"/>
                                        <String fx:value="boty"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="3">
                            <children>
                                <Label text="Minimální teplota "/>
                                <Spinner fx:id="minimalniTeplota" max="70" min="-70"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="4">
                            <children>
                                <Label text="Maximální teplota "/>
                                <Spinner fx:id="maximalniTeplota" max="70" min="-70"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="5">
                            <children>
                                <Label text="Formální "/>
                                <ComboBox fx:id="formalnost" prefWidth="150.0">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="neformální"/>
                                            <String fx:value="středně"/>
                                            <String fx:value="formální"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </HBox>
                        <Label fx:id="appendArea" text="" GridPane.rowIndex="6" alignment="CENTER"/>
                    </children>
                </GridPane>
                <ListView fx:id="obleceniListView" onMouseClicked="#zpracujKliknutiMysi" prefHeight="200.0"
                          prefWidth="200.0"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
